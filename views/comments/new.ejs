<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center">Add a comment </h1>
    <div class="row">
        <div style="width:50%; margin:30px auto;">
            <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name..." name="comment[author]">
                </div>
                <div class="form-group">
                    <textarea class="form-control addCampTextarea" placeholder="The content..." name="comment[content]"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-default btn-block">Add Comment</button>    
                </div> 

            </form>
            <a class="atob" href="/campgrounds/<%= camp._id %>">Back</a>
        </div>
        
    </div>
    
            
</div>

<% include ../partials/footer %>