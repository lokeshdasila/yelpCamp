<% include partials/header %>
<div class="container">
    <h1 style="text-align:center">Add the place </h1>
    <div class="row">
        <div style="width:50%; margin:30px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Name..." name="placeName">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Image URL..." name="imageURL">  
                </div>
                <div class="form-group">
                    <textarea class="form-control addCampTextarea" placeholder="Some content..." name="content"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-default btn-block">Add place</button>    
                </div> 

            </form>
            <a class="atob" href="/campgrounds">Back</a>
        </div>
        
    </div>
    
            
</div>

